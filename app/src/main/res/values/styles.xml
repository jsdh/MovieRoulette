<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <!--<item name="android:windowSharedElementsUseOverlay">false</item>-->
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/ic_refresh</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="configMultiSelect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="activeBgColor">@android:color/holo_blue_dark</item>
        <item name="activeTextColor">@android:color/white</item>
        <item name="inactiveBgColor">@color/colorPrimaryDark</item>
        <item name="inactiveTextColor">@android:color/white</item>
        <item name="separatorColor">@android:color/darker_gray</item>
    </style>

    <style name="configMultiSelect2" parent="configMultiSelect">
        <item name="android:textSize">13sp</item>
        <item name="toggleWidth">92dp</item>
    </style>

</resources>
